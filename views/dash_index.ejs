<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- CSS Link -->
    <link rel="stylesheet" href="css/courses.css">

    <!-- Font styles -->
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@600&family=Overpass:wght@300&family=Roboto+Mono:wght@300&family=Ubuntu&display=swap" rel="stylesheet">

    <!-- Icon libraray -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/courses.css">
</head>

<body>
    <!-- HEADER -->
    <%- include('header'); -%>


    <!-- NAVIGATION BAR -->
    <nav id="navbar">
        <div id="navbar-items">
            <ul>
                <li class="item"><a href="/">Home</a></li>
                <li class="item"><a href="#" class="active">STC Registration</a></li>
                <li class="item"><a href="#">Internships</a></li>
                <li class="item dropdown"><a href="#">Adminstration</a>
                    <div class="dropdown-content">
                        <a href="#">Link 1</a>
                        <a href="#">Link 2</a>
                        <a href="#">Link 3</a>
                    </div>
                </li>
                <li class="item dropdown"><a href="#">Important Links</a>
                    <div class="dropdown-content">
                        <a href="#">Link 1</a>
                        <a href="#">Link 2</a>
                        <a href="#">Link 3</a>
                    </div>
                </li>
                <li class="item"><a href="/about">About us</a></li>
                <li class="item"><a href="/contact">Contact Us</a></li>
            </ul>
        </div>
        <div id="navbar-right">

            <form class="search-bar" role="search">
                <input class="form-control font2" type=" search" placeholder="Search.." aria-label="Search">
                <button class="btn-primary font2" type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </nav>

    <% if(error && error.length>0) { %>
      <div class="alert" style="background-color: red;">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <div style="font-size: larger;" class="alert alert-danger" role="alert">
            <p style="text-align: center;"><%= error %></p>
        </div>
      </div>
    <% } %>
    <% if(success && success.length>0) { %>
      <div class="alert" style="background-color: #0bff00;">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <div style="font-size: larger;" class="alert alert-danger" role="alert">
            <p style="text-align: center;"><%= success %></p>
        </div>
      </div>
    <% } %>


    <div class="container">
        <aside id="aside">
            <ul class="aside-list">
                <li class="aside-item active"><a href="/dash_index" class="font6"><div>View/ Update Profile</div></a></li>
                <li class="aside-item"><a href="/courses" class="font6"><div>Courses</div></a></li>
                <% if(currentUser.usertype == "faculty") { %>
                  <li class="aside-item"><a href="/course-upload" class="font6"><div>Add a course</div></a></li>
                <% } %>
                <% if(currentUser.usertype == "faculty") { %>
                  <li class="aside-item "><a href="/offered_courses" class="font6"><div>Courses Offered</div></a></li>
                <% } else if(currentUser.usertype == "student") { %>
                  <li class="aside-item "><a href="/enrolled_course" class="font6"><div>Courses Enrolled</div></a></li>
                <% } %>
                <li class="aside-item"><a href="/upload-id" class="font6"><div>Upload your Institute ID Card</div></a></li>
                <% if(currentUser.usertype == "student") { %>
                  <li class="aside-item"><a href="/view-ids" class="font6"><div>View Institute ID Card</div></a></li>
                <% } %>
                <li class="aside-item"><a href="#" class="font6"><div>Download Certificate</div></a></li>
                <li class="aside-item"><a href="/change-password" class="font6"><div>Change Password</div></a></li>
            </ul>
        </aside>

        <section id="section">
            <div class="section-bar">
                <strong class="font3">Welcome <%= currentUser.firstname %>!</strong>
                <div class="logout"><a href="/logout"><button class="btn-secondary logout-btn">Logout</button></a></div>
            </div>
            <h1 class="font1">Profile</h1>
            <div class="profile">
                <div class="info">
                    <hr>
                    <div class="info-row">
                        <div class="data">Name</div>
                        <div class="data"><%= currentUser.firstname %> <%= currentUser.lastname %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Date of Birth</div>
                        <div class="data"><%= currentUser.dob %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Highest Qualification</div>
                        <div class="data"><%= currentUser.qualification %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Designation</div>
                        <div class="data"><%= currentUser.Designation %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Department</div>
                        <div class="data"><%= currentUser.Department %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Area of specialization/ Interest</div>
                        <div class="data"><%= currentUser.AreaOfSpecialization %></div>
                    </div>
                    <div class="related-to">Institute/ Organization Details</div>
                    <div class="info-row">
                        <div class="data">Name</div>
                        <div class="data"><%= currentUser.Institute.name %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Place</div>
                        <div class="data"><%= currentUser.Institute.place %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">State</div>
                        <div class="data"><%= currentUser.Institute.state %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Nature</div>
                        <div class="data"><%= currentUser.Institute.nature %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Type</div>
                        <div class="data"><%= currentUser.Institute.type %></div>
                    </div>
                    <div class="related-to">Address for Corresspondence</div>
                    <div class="info-row">
                        <div class="data">Address</div>
                        <div class="data"><%= currentUser.address %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">State</div>
                        <div class="data"><%= currentUser.state %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">District</div>
                        <div class="data"><%= currentUser.district %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Pincode</div>
                        <div class="data"><%= currentUser.pincode %></div>
                    </div>
                    <hr>
                    <!-- <div class="info-row">
                        &nbsp;
                    </div> -->
                    <!-- <hr> -->
                    <div class="info-row">
                        <div class="data">Phone No.</div>
                        <div class="data"><%= currentUser.MobileNo %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Email ID</div>
                        <div class="data"><%= currentUser.email %></div>
                    </div>
                    <hr>
                    <a href="/dash_index/edit"><button class="btn-secondary">Edit Profile</button></a>
                </div>
                <div class="photo">
                    <img src="images/<%= currentUser.profileImage %>" alt="No Photo Available">
                    <div class="change" style="display: block;">
                      <form method="POST" action="/upload-profile"  enctype="multipart/form-data">
                        <input type="file" name="image" />
                        <input type="submit" style="width: 100%; background-color: #c9ddff;" value="Upload" />
                      </form>
                    </div>
                </div>
            </div>
        </section>
    </div>


    <!-- FOOTER -->
    <%- include('footer'); -%>

    <style>
    /* CSS Reset */
    *{
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
        scroll-behavior: smooth;
    }
    /* *::-webkit-scrollbar {
        display: none;                 ***** TO REMOVE THE SCROLL BAR FROM SCREEN *****
    } */

    /* HEADER */
    #header{
        background-image: linear-gradient(90deg, rgb(40, 78, 54), rgb(0, 124, 65));
        display: flex;
        flex-direction: row;
        padding: 30px 30px;
        justify-content: space-between;
        align-items: center;
    }
    .right{
        color: whitesmoke;
    }
    /* NAVIGATION BAR */
    #navbar{
        display: flex;
        justify-content: space-between;
        background-color: white;
        margin-top: 1px;
        border-bottom: 1px solid grey;
        }
    #navbar-items{
        margin-left: 1rem;
    }
    #navbar-items ul{
        display: flex;
    }
    #navbar-items ul li{
        list-style: none;
        padding: 1.8rem 1rem;
    }
    #navbar-items ul li a{
        text-decoration: none;
        font-family: 'Ubuntu', sans-serif;
        color: rgb(31, 31, 31);
        padding: 7px 9px;
        font-size: medium;
    }
    #navbar-items ul li a:hover{
        color: #0062e4;
        text-decoration: underline;
    }
    #navbar-items ul li a.active{
        color: #0062e4;
        font-weight: bold;
    }

    .dropdown:hover .dropdown-content{
        display: block;
    }

    .dropdown-content{
        display: none;
        z-index: 1;
        position: absolute;
        background-color: #f5f7fa;
        border: 1px solid #e3e4e5;
        min-width: 150px;
        border-radius: 2px;
        animation-name: anime1;
        animation-duration: 0.2s;
        animation-timing-function:ease-in;
        animation-fill-mode: forwards;
        animation-direction: normal;
    }
    @keyframes anime1{
        0%{
            height: 0%;
        }
        100%{
            height: 100px;
        }
    }
    .dropdown-content a{
        display: block;
    }

    #navbar-right{
        display: flex;
        margin-right: 2rem;
    }

    .search-bar{
        display: flex;
        flex-direction: row;
        align-items: center;
    }
    .search-bar input{
        padding: 7px 10px;
        border: 1px solid grey;
        border-radius: 2px;
    }
    .alert {
      padding: 5px;
      color: black;
      }

      /* The close button */
      .closebtn {
      margin-left: 15px;
      color: black;
      font-weight: bold;
      float: right;
      font-size: 22px;
      line-height: 20px;
      cursor: pointer;
      transition: 0.3s;
      }

      /* When moving the mouse over the close button */
      .closebtn:hover {
      color: black;
      }
    </style>

</body>

</html>
