</head>

<body>

    <!-- HEADER -->
<%- include('header'); -%>

<!-- NAVIGATION BAR -->
<%- include('navbar'); -%>

    <div class="container" style="display: flex;    padding: 0px; margin: 0px; max-width: 100%;">
        <aside class="form-img" style="display: flex; width: 50%;">
            <img src="img/code.jpg" alt="Online Internships" style="width: 100%;">
        </aside>
        <section class="enroll-form" style="width: 50%; padding: 2em; padding-left: 13em; padding-right: 10em;">
          <div style="padding: 0.7em; background-color: #e6e4e4; border-radius: 0.25em; width: 330px;">
            <h1 style="text-align: center; font-family: system-ui;">Certified Online Training</h1>
            <div class="form">
                <form action="/enroll" method="POST" style="padding: 0.5em; font-family: system-ui;" enctype="multipart/form-data">
                    <div class="form-div" style="display: none;">
                        <label for="name" class="required">Username</label><br>
                        <input type="text" name="username" id="name" value="<%= currentUser.username %>">
                    </div>
                    <div class="form-div">
                        <label for="name" class="required">Name</label><br>
                        <input type="text" name="name" id="name" minlength="3" required>
                    </div>

                    <div class="form-div">
                        <label for="email" class="required">Email</label><br>
                        <input type="email" name="email" id="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
                    </div>
                    <div class="form-div">
                        <label for="phone" class="required">Mobile Number</label><br>
                        <input type="text" name="MobileNo" id="phone" pattern="[1-9]{1}[0-9]{9}" required>
                    </div>
                    <div class="form-div">
                        <label for="college" class="required">College</label><br>
                        <input type="text" name="college" id="phone" required>
                    </div>
                    <div class="form-div">
                        <label for="course" class="required">Select Course </label><br>
                        <select name="course" id="course" style="width: 100%; height: 30px;">
                            <option value="Deep Learning">Deep Learning</option>
                            <option value="Web Development" selected>Web Development</option>
                            <option value="Machine Learning">Machine Learning</option>
                            <option value="Python Programming">Python Programming</option>
                        </select>
                    </div>
                    <div class="form-div outline">
                        <label for="skill" class="required">Your Skills</label><br>
                        <textarea name="skills" cols="10" rows="1" id="skill" required></textarea>
                    </div>
                    <div class="form-div outline">
                        <label for="link" class="required">Upload Resume</label><br>
                        <input name="link" type="file" required>
                    </div>
                    <div class="form-btn" style="text-align: -webkit-center;">
                        <input type="reset" class="btn-secondary" value="Reset" style="width: 49%">
                        <input type="submit" class="btn-secondary" value="Enroll Now" style="width: 49%">
                    </div>
                </form>
            </div>
          </div>
        </section>

    </div>
    <!-- FOOTER -->
    <%- include('footer'); -%>

    <style media="screen">
    input, textarea {
      width: 100%;
      height: 25px;
    }
    textarea {
          height: 50px;
    }
    .required:after {
      content:" *";
      color: red;
    }
    .font2 {
      height: 27px;
background-color: azure;
    }
    .form-div {
      padding-bottom: 0.7em;
    }
    .btn-secondary:hover {
          background-color: #004545;
    }
    </style>

    <!-- SCRIPT LINK -->
    <script src="intern.js"></script>


</body>

</html>
