<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- CSS Link -->
    <link rel="stylesheet" href="css/courses.css">

    <!-- Font styles -->
    <link href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2:wght@600&family=Overpass:wght@300&family=Roboto+Mono:wght@300&family=Ubuntu&display=swap" rel="stylesheet">

    <!-- Icon libraray -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/courses.css">
</head>

<body>
    <!-- HEADER -->
    <%- include('header'); -%>


    <!-- NAVIGATION BAR -->
    <%- include('navbar'); -%>

    <% if(error && error.length>0) { %>
      <div class="alert" style="background-color: red;">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <div style="font-size: larger;" class="alert alert-danger" role="alert">
            <p style="text-align: center;"><%= error %></p>
        </div>
      </div>
    <% } %>
    <% if(success && success.length>0) { %>
      <div class="alert" style="background-color: #0bff00;">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <div style="font-size: larger;" class="alert alert-danger" role="alert">
            <p style="text-align: center;"><%= success %></p>
        </div>
      </div>
    <% } %>


    <div class="container">
        <aside id="aside">
            <ul class="aside-list">
                <% if(currentUser.usertype == "faculty") { %>
                  <li class="aside-item active"><a href="/facultyDash" class="font6"><div>View/ Update Profile</div></a></li>
                <% } %>
                <% if(currentUser.usertype == "student") { %>
                  <li class="aside-item active"><a href="/dash_index" class="font6"><div>View/ Update Profile</div></a></li>
                <% } %>
                <li class="aside-item"><a href="/courses" class="font6"><div>Courses</div></a></li>
                <% if(currentUser.usertype == "faculty") { %>
                  <li class="aside-item"><a href="/course-upload" class="font6"><div>Add a course</div></a></li>
                <% } %>
                <% if(currentUser.usertype == "faculty") { %>
                  <li class="aside-item "><a href="/offered_courses" class="font6"><div>Courses Offered</div></a></li>
                <% } else if(currentUser.usertype == "student") { %>
                  <li class="aside-item "><a href="/enrolled_course" class="font6"><div>Courses Enrolled</div></a></li>
                <% } %>
                <% if(currentUser.usertype == "student") { %>
                <li class="aside-item"><a href="/upload-id" class="font6"><div>Upload your Institute ID Card</div></a></li>
                
                  <li class="aside-item"><a href="/view-ids" class="font6"><div>View Institute ID Card</div></a></li>
                <% } %>
                <li class="aside-item"><a href="#" class="font6"><div>Download Certificate</div></a></li>
                <li class="aside-item"><a href="/change-password" class="font6"><div>Change Password</div></a></li>
            </ul>
        </aside>

        <section id="section">
            <div class="section-bar">
                <strong class="font3">Welcome <%= currentUser.firstname %>!</strong>
                <div class="logout"><a href="/logout"><button class="btn-secondary logout-btn">Logout</button></a></div>
            </div>
            <h1 class="font1">Profile</h1>
            <div class="profile">
                <div class="info">
                    <hr>
                    <div class="info-row">
                        <div class="data">Name</div>
                        <div class="data"><%= currentUser.firstname %> <%= currentUser.lastname %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Date of Birth</div>
                        <div class="data"><%= currentUser.dob %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Highest Qualification</div>
                        <div class="data"><%= currentUser.qualification %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Designation</div>
                        <div class="data"><%= currentUser.Designation %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Department</div>
                        <div class="data"><%= currentUser.Department %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Area of specialization/ Interest</div>
                        <div class="data"><%= currentUser.AreaOfSpecialization %></div>
                    </div>
                    <div class="related-to">Institute/ Organization Details</div>
                    <div class="info-row">
                        <div class="data">Name</div>
                        <div class="data"><%= currentUser.Institute.name %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Place</div>
                        <div class="data"><%= currentUser.Institute.place %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">State</div>
                        <div class="data"><%= currentUser.Institute.state %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Nature</div>
                        <div class="data"><%= currentUser.Institute.nature %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Type</div>
                        <div class="data"><%= currentUser.Institute.type %></div>
                    </div>
                    <div class="related-to">Address for Corresspondence</div>
                    <div class="info-row">
                        <div class="data">Address</div>
                        <div class="data"><%= currentUser.address %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">State</div>
                        <div class="data"><%= currentUser.state %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">District</div>
                        <div class="data"><%= currentUser.district %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Pincode</div>
                        <div class="data"><%= currentUser.pincode %></div>
                    </div>
                    <hr>
                    <!-- <div class="info-row">
                        &nbsp;
                    </div> -->
                    <!-- <hr> -->
                    <div class="info-row">
                        <div class="data">Phone No.</div>
                        <div class="data"><%= currentUser.MobileNo %></div>
                    </div>
                    <hr>
                    <div class="info-row">
                        <div class="data">Email ID</div>
                        <div class="data"><%= currentUser.email %></div>
                    </div>
                    <hr>
                    <a href="/dash_index/edit"><button class="btn-secondary">Edit Profile</button></a>
                </div>
                <div class="photo">
                  <% if(currentUser.profileImage) { %>
                    <img src="images/<%= currentUser.profileImage %>" alt="No Photo Available">
                  <% } else { %>
                    <img src="images/photo2.png" alt="No Photo Available">
                  <% } %>
                    <div class="change" style="display: block;">
                      <form method="POST" action="/upload-profile"  enctype="multipart/form-data">
                        <input type="file" name="image" />
                        <input type="submit" style="width: 100%; background-color: #c9ddff;" value="Upload" />
                      </form>
                    </div>
                </div>
            </div>
        </section>
    </div>


    <!-- FOOTER -->
    <%- include('footer'); -%>



</body>

</html>
