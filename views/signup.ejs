            </ul>
        </div>
        <div id="navbar-right">
          <% if(!currentUser) { %>
            <div class="navbar-login">
                <button class="btn-secondary dropbtn font2" onclick="dropdownbtn()"  type="button">Login</button>
                <div id="myDropdown" class="dropdown-cnt">
                    <a href="/login" onclick="document.location.href='/login';">As Student</a>
                    <a href="/login">As Co-ordinator</a>
                  </div>
                <button class="btn-secondary dropbtn font2" onclick="dropdownbtn2()"  type="button">Sign Up</button>
                <div id="myDropdown2" class="dropdown-cnt">
                    <a href="/signup" onclick="document.location.href='/signup';">For Student</a>
                    <!-- <a href="/login">For Co-ordinator</a> -->
                  </div>
            </div>
          <% } else { %>
            <div style="text-decoration: none; font-family: 'Ubuntu', sans-serif; color: darkgreen; padding: 7px 9px; font-size: medium;" class="navbar-login">
                <a style="text-decoration: none; color: darkgreen;" href="/dash_index">Logged in as <%= currentUser.username %></a>
            </div>
          <% } %>
            <form class="search-bar" role="search">
                <input class="form-control font2" type="search" placeholder="Search.." aria-label="Search">
                <button class="btn-primary font2" type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
    </nav>

    <% if(error && error.length>0) { %>
      <div class="alert" style="background-color: red;">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <div style="font-size: larger;" class="alert alert-danger" role="alert">
            <p style="text-align: center;"><%= error %></p>
        </div>
      </div>
    <% } %>
    <% if(success && success.length>0) { %>
      <div class="alert" style="background-color: #0bff00;">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <div style="font-size: larger;" class="alert alert-danger" role="alert">
            <p style="text-align: center;"><%= success %></p>
        </div>
      </div>
    <% } %>

    <form class="forms" action="/signup" method="POST">
      <img class="loginImg" src="img/Login.png" alt="" width="80" height="80">
      <h2 style="text-align: center;">Please Sign Up</h2> <br>
      <label for="inputEmail" class="sr-only">First Name</label>
      <input type="text" id="inputText" class="inputs" name="firstname" placeholder="First Name" required="true" autofocus="">
      <label for="inputEmail" class="sr-only">Last Name</label>
      <input type="text" id="inputText" class="inputs" name="lastname" placeholder="Last Name" required="true" autofocus="">
      <label for="inputEmail" class="sr-only">Username</label>
      <input type="text" id="inputText" class="inputs" name="username" placeholder="Username" required="true" autofocus="">
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" name="email" class="inputs" placeholder="Email address" required="true" autofocus="">
      <label for="inputEmail" class="sr-only">Mobile No.</label>
      <input type="number" id="inputNumber" name="MobileNo" class="inputs" placeholder="Mobile No." required="" autofocus="">
      <label for="inputPassword" class="sr-only">Password</label>
      <input name="password" class="inputs" type="password" id="psw" name="psw" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
      <div>
        <div>
            <div>
                <input type="submit" value="Sign Up" class="submitbtn">
            </div>
            <br>
        </div>
        <a class="links signUpNew" href="/login" target="_self">Existing User? Login</a>
        <br>
      </div>
    </form>

