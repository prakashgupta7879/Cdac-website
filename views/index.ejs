    <!-- Icon libraray -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <!-- HEADER -->
    <%- include('header'); -%>


    <!-- NAVIGATION BAR -->
    <%- include('navbar'); -%>

    <!-- SECTION-1-->
    <section id="section">
        <div class="section-left">
            <div class="list-head"><span>Apply Online</span></div>
            <div class="list">
                <ul>
                    <li class="list-item"><a href="https://careers.cdac.in/advt-details/CORP-672022-U5PEP">C-DAC Invites online applications for the post of Executive Director (Level 14) to be filled by Direct Recruitment/Transfer (absorption)/Deputation.</a></li>
                    <li class="list-item"><a href="https://lnkd.in/dC9V_4eV ">Apply for Vega Processors</a></li>
                    <li class="list-item"><a href="#">Link3</a></li>
                </ul>
            </div>
            <div class="list-head"><span>Application &amp; Training</span></div>
            <div class="list">
                <ul>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=newregister1">Register for C-CAT (September-22)</a></li>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=DAC&courseid=0">PG-Diploma Courses (September-22)</a></li>
                    <li class="list-item"><a href="https://bit.ly/3tfgf0A">Free Courses for Scheduled Tribe Students</a></li>
                </ul>
            </div>
            <div class="list-head"><span>Programs</span></div>
            <div class="list">
                <ul>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=edu_pgpd_pgd_programmes">Post Graduate Diploma Programmes</a></li>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=edu_ftp_formal_training_programmes">Formal Training Programmes</a></li>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=edu_ctp_corp_training_programmes">Corporate Training Programmes</a></li>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=edu_its_int_training_programmes">International Training Programmes</a></li>
                </ul>
            </div>
            <div class="list-head"><span> Important Links</span></div>
            <div class="list">
                <ul>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=sponsored_projects">Sponsored Projects</a></li>
                    <li class="list-item"><a href="#">Link2</a></li>
                    <li class="list-item"><a href="#">Link3</a></li>
                </ul>
            </div>
            <div class="list-head"><span> Opportunities</span></div>
            <div class="list">
                <ul>
                    <li class="list-item"><a href="https://www.cdac.in/index.aspx?id=pdf_IoA_Collaboration_Innovation_V10">Intent of Association for Collaborative Innovation</a></li>
                </ul>
            </div>
        </div>

        <div class="section-mid">
            <div class="bg fade">
                <img src="img/bg1.jpg" style="width:100%">
            </div>

            <div class="bg fade">
                <img src="img/bg2.jpg" style="width:100%">
            </div>

            <div class="bg fade">
                <img src="img/bg3.jpg" style="width:100%">
            </div>

            <div style="text-align:center" class="dots-div">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
            </div>
        </div>

        <div class="section-right">
            <div class="section-right-head">Latest Updates</div>
            <hr>
            <div class="section-right-content">
                <marquee width="100%" direction="up" height="100%" scrolldelay="100">
                    <ul>
                      <% update.forEach(function(update) { %>
                        <li class="content"><a href="pdfs/<%= update.link %>" target="_blank" class="font1"><%= update.name %></a></li>
                      <% }) %>
                    </ul>
                </marquee>
            </div>
        </div>
        </div>
    </section>


    <!-- SECTION-2 -->
    <section id="section-2">
        <div class="more-about">
            <div class="more-about-box">
                <a href="#"> Video Gallery</a>
            </div>
            <div class="more-about-box">
                <a href="#"> Events</a>
            </div>
            <div class="more-about-box">
                <a href="https://www.cdac.in/"> C-DAC main Website</a>
            </div>
            <div class="more-about-box">
                <a href="https://www.cdac.in/index.aspx?id=cdac_achievements"> C-DAC's Achievements</a>
